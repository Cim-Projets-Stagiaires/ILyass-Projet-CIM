          <label for="Statut">Statut du demandeur :</label>
          <span><input type="radio" id="Status" {{#if (eq user.status 'Enseignant chercheur')}}checked{{/if}} disabled> Enseignant chercheur</span>
          <span><input type="radio" id="Status" {{#if (eq user.status 'Etudiant')}}checked{{/if}} disabled> Etudiant</span>
        </div>
        <div class="form-field">
          <label for="Statut">Niveau d'étude de l'étudiant :</label>
          <span><input type="radio" id="niveau" {{#if (eq user.niveau 'License')}}checked{{/if}} disabled> License</span>
          <span><input type="radio" id="niveau" {{#if (eq user.niveau 'Master')}}checked{{/if}} disabled> Master</span>
          <span><input type="radio" id="niveau" {{#if (eq user.niveau 'Doctorat')}}checked{{/if}} disabled> Doctorat</span>
        </div>
        
      </div>

      <div class="sample-form">
        <div class="form-field">
          <label>Encadrant (dans le cas des étudiants)</label>
        </div>
        <div class="form-line">
